# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# NEVER PUT REAL PRIVATE KEYS HERE IN PRODUCTION!
# Use a secure key management service like AWS KMS, HashiCorp Vault, etc.

# Solana Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# Token Configuration
NEXT_PUBLIC_TOKEN_MINT_ADDRESS=YOUR_MINT_ADDRESS_HERE
NEXT_PUBLIC_TOKEN_PRICE=0.002

# Backend API Configuration
NEXT_PUBLIC_API_ENDPOINT=http://localhost:3001
API_SECRET_KEY=your-super-secret-api-key-here

# FOR DEVELOPMENT ONLY - NEVER USE IN PRODUCTION
DEV_PRIVATE_KEY=your-development-private-key-here
